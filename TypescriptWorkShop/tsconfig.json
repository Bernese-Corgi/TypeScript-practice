// tsconfig.json 설정 파일은 프로젝트에 최상단 폴더에 위치시킨다.
{
  // 타입스크립트 컴파일러에 포함될 파일들을 include 프로퍼티 내에 작성
  "include": [
    "src/**/*.ts" /* src폴더 하위의 모든 .ts 확장자를 가진 파일을 포함 */
  ],
  // 타입스크립트 컴파일러에 제외될 파일들을 exclude 프로퍼티 내에 작성
  "exclude": ["node_modules"],
  // 실제 컴파일할 경우 적용되는 옵션들
  "compilerOptions": {
    "module": "es6" /* 어떤 모듈 시스템을 사용할지 결정 */,
    "rootDir": "src" /* 입력 파일의 루트 폴더 */,
    "outDir": "dist" /* 컴파일 후 생성되는 js파일이 생성될 폴더명 */,
    "target": "es6" /* ECMAScript 대상 버전 지정 */,
    "sourceMap": true /* 소스맵 '.map' 파일 생성 설정 */
    // "removeComments": true /* 출력 시, 주석 제거 설정 */
    // "noImplicitAny": true /* 명시적이지 않은 'any' 유형으로 표현식 및 선언 사용 시 오류 발생 */
  }
}
